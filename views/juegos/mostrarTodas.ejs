<!doctype html>
<html lang="es">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

	<title>Juegos</title>

	<style>
	#search {
		background-image: url('https://www.w3schools.com/css/searchicon.png');
		background-position: 10px 12px;
		background-repeat: no-repeat;
		width: 100%;
		font-size: 16px;
		padding: 12px 20px 12px 40px;
		border: 1px solid #ddd;
		margin-bottom: 12px;
	}
</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="/">Index <span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/crear">Nuevo <span class="sr-only"></span></a>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container mt-4">
		<div class="row">
			<div class="col-12 col-lg-6 offset-lg-3">
				<h2 class="text-center pb-4">Listado de juegos</h2>
				<% if (typeof juegos !== 'undefined' && juegos.length > 0) { %>
				<input type="text" id="search" onkeyup="search()" placeholder="Buscar por titulo.." title="Escribe un titulo">
				<div id="searchTarget" class="list-group">
					<% juegos.forEach(function(juego){ %>
					<a class="text-center list-group-item list-group-item-action" href="/ver/<%= juego._id %>"><%= juego.titulo %></a>
					<% }); %>
				</div>
				<p style="display: none;" id="error_no_games" class="text-center">No se ha agregado ningún juego.</p>
				<script>
					function search() {
						var input, filter, div, error, a, i, count = 0;
						error = document.getElementById("error_no_games");
						input = document.getElementById("search");
						filter = input.value.toUpperCase();
						div = document.getElementById("searchTarget");
						a = div.getElementsByTagName("a");

						for (i = 0; i < a.length; i++) {
							if (a[i].innerHTML.toUpperCase().indexOf(filter) > -1) {
								count ++;
								a[i].style.display = "";
							} else a[i].style.display = "none";
						}

						if(count == 0) error.style.display = "";
						else error.style.display = "none";
					}
				</script>
				<% }else{ %>
					<p class="text-center">No se ha agregado ningún juego.</p>
				<% } %>
			</div>
		</div>
		
	</div>
	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>